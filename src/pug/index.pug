doctype html
html(lang='en')
<script src="https://kit.fontawesome.com/481f34b392.js" crossorigin="anonymous"></script>
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='Fiz Rey Armesto')
    title Portfolio - Fiz Rey Armesto
    // Favicon
    link(rel='icon', type='image/x-icon', href='assets/Ficon.ico')
    include includes/css.pug

  body.d-flex.flex-column.h-100
    main.flex-shrink-0
      // Navigation
      include includes/navbar.pug

      // Header
      header.py-5
        .container.px-5.pb-5
          .row.gx-5.align-items-center
            .col-xxl-5
              // Header text content
              .text-center.text-xxl-start
                .badge.bg-gradient-primary-to-secondary.text-white.mb-4
                  | Computer Engineer &middot; Unity & Unreal Engine Developer
                h1.display-3.fw-bolder.mb-5
                  span.text-gradient.d-inline Fiz Rey Armesto
                .d-grid.gap-3.d-sm-flex.justify-content-sm-center.justify-content-xxl-start.mb-3
                  a.btn.btn-primary.btn-lg.px-5.py-3.me-sm-3.fs-6.fw-bolder(href='resume.html') Resume
                  a.btn.btn-outline-dark.btn-lg.px-5.py-3.fs-6.fw-bolder(href='projects.html') Projects
            .col-xxl-7
              // Header profile picture
              .d-flex.justify-content-center.mt-5.mt-xxl-0
                .profile.bg-gradient-primary-to-secondary
                  // TIP: For best results, use a photo with a transparent background like the demo example below
                  // Watch a tutorial on how to do this on YouTube (link)
                  img.profile-img(src='assets/profile.png', alt='...')
                  .dots-1
                    include includes/svg-dots.pug
                  .dots-2
                    include includes/svg-dots.pug
                  .dots-3
                    include includes/svg-dots.pug
                  .dots-4
                    include includes/svg-dots.pug
      // About Section
      section.bg-light.py-5
        .container.px-5
          .row.gx-5.justify-content-center
            .col-xxl-8
              .text-center.my-5
                h2.display-5.fw-bolder
                  span.text-gradient.d-inline About Me
                p.lead.fw-light.mb-4 My name is Fiz and I'm a Computer Engineer graduate interested in VR and game development with Unreal Engine and Unity.
                p.text-muted Know more about me in Linkedin and Twitter. Don't forget to discover some of my projects on Github.
                .d-flex.justify-content-center.fs-2.gap-4
                  a.text-gradient(href="https://www.linkedin.com/in/fizrey/") 
                    i.bi.bi-linkedin
                  a.text-gradient(href="https://twitter.com/fichodev") 
                    i.bi.bi-twitter 
                  a.text-gradient(href="https://github.com/ficho12") 
                    i.bi.bi-github
      // Footer
      include includes/footer.pug
      include includes/scripts.pug