doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='Fiz Rey Armesto - Computer Engineer & VR/AR Developer. Specialized in Unity, Unreal Engine, and immersive experiences.')
    meta(name='author', content='Fiz Rey Armesto')
    title Fiz Rey Armesto - Computer Engineer & VR/AR Developer
    // Favicon
    link(rel='icon', type='image/x-icon', href='assets/Ficon.ico')
    include includes/css.pug

  body
    // Navigation
    include includes/navbar.pug

    // Hero Section
    section.hero.min-vh-100.d-flex.align-items-center
      .container
        .row.align-items-center
          .col-lg-6.order-lg-2
            .hero-image.text-center
              img.img-fluid.rounded-circle.shadow-lg(src='assets/profile.png', alt='Fiz Rey Armesto', style='max-width: 350px;')
          .col-lg-6.order-lg-1
            .hero-content
              h1.display-4.fw-bold.mb-4
                | Hi, I'm 
                span.text-primary Fiz Rey Armesto
              h2.h4.text-muted.mb-4 Computer Engineer & VR/AR Developer
              p.lead.mb-4 I create immersive experiences using Unity and Unreal Engine, specializing in VR development and innovative interactive solutions.
              .d-flex.gap-3.mb-4
                a.btn.btn-primary.btn-lg(href='#projects') View My Work
                a.btn.btn-outline-primary.btn-lg(href='#contact') Get In Touch
              .social-links.d-flex.gap-3
                a.text-muted.fs-4(href='https://www.linkedin.com/in/fizrey/', target='_blank', title='LinkedIn')
                  i.bi.bi-linkedin
                a.text-muted.fs-4(href='https://github.com/ficho12', target='_blank', title='GitHub')
                  i.bi.bi-github
                a.text-muted.fs-4(href='https://twitter.com/fichodev', target='_blank', title='Twitter')
                  i.bi.bi-twitter

    // About Section
    section#about.py-5.bg-light
      .container
        .row.justify-content-center
          .col-lg-8.text-center
            h2.h1.fw-bold.mb-4 About Me
            p.lead.mb-4 
              | I'm a Computer Engineer with a passion for creating immersive digital experiences. 
              | My expertise lies in VR/AR development, game programming, and cutting-edge interactive technologies.
            .row.g-4.mt-4
              .col-md-4
                .feature-card.text-center.p-4
                  .feature-icon.mb-3
                    i.bi.bi-code-slash.fs-1.text-primary
                  h4 Development
                  p Unity, Unreal Engine, C#, C++, JavaScript
              .col-md-4
                .feature-card.text-center.p-4
                  .feature-icon.mb-3
                    i.bi.bi-headset-vr.fs-1.text-primary
                  h4 VR/AR
                  p Immersive experiences, VR gaming, AR applications
              .col-md-4
                .feature-card.text-center.p-4
                  .feature-icon.mb-3
                    i.bi.bi-laptop.fs-1.text-primary
                  h4 Engineering
                  p Software architecture, system design, optimization

    // Experience Section
    section#experience.py-5
      .container
        .row.justify-content-center
          .col-lg-10
            h2.h1.fw-bold.text-center.mb-5 Professional Experience
            .row.g-4
              .col-lg-6
                .experience-card.h-100
                  .card.border-0.shadow-sm.h-100
                    .card-body.p-4
                      h4.fw-bold AR Soft
                      p.text-primary.mb-2 VR/AR Developer
                      p.text-muted.small.mb-3 Current Position
                      p Developing cutting-edge VR and AR applications, working on immersive experiences and interactive solutions for various industries.
              .col-lg-6
                .experience-card.h-100
                  .card.border-0.shadow-sm.h-100
                    .card-body.p-4
                      h4.fw-bold Freelance Developer
                      p.text-primary.mb-2 Game Developer
                      p.text-muted.small.mb-3 2020 - Present
                      p Creating independent games and VR experiences, participating in game jams, and developing custom solutions for clients.

    // Projects Section
    section#projects.py-5.bg-light
      .container
        .row.justify-content-center
          .col-lg-10
            h2.h1.fw-bold.text-center.mb-5 Featured Projects
            .row.g-4
              // Work Projects
              .col-lg-4.col-md-6
                .project-card
                  .card.border-0.shadow-sm.h-100
                    .card-body.p-4
                      .project-category.mb-2
                        span.badge.bg-primary.mb-2 Professional
                      h4.fw-bold.mb-3 Bee Showcase (Miel 79)
                      p.text-muted.mb-3 Interactive VR experience showcasing bee conservation and honey production processes.
                      .tech-stack.mb-3
                        span.badge.bg-light.text-dark.me-2 Unity
                        span.badge.bg-light.text-dark.me-2 VR
                        span.badge.bg-light.text-dark C#
              .col-lg-4.col-md-6
                .project-card
                  .card.border-0.shadow-sm.h-100
                    .card-body.p-4
                      .project-category.mb-2
                        span.badge.bg-primary.mb-2 Professional
                      h4.fw-bold.mb-3 Eyeflow
                      p.text-muted.mb-3 Advanced eye-tracking VR application for medical and research applications.
                      .tech-stack.mb-3
                        span.badge.bg-light.text-dark.me-2 Unreal Engine
                        span.badge.bg-light.text-dark.me-2 VR
                        span.badge.bg-light.text-dark C++
              .col-lg-4.col-md-6
                .project-card
                  .card.border-0.shadow-sm.h-100
                    .card-body.p-4
                      .project-category.mb-2
                        span.badge.bg-primary.mb-2 Professional
                      h4.fw-bold.mb-3 Renfe VR Machinist Simulator
                      p.text-muted.mb-3 Professional VR training simulator for train operators, providing realistic operational scenarios.
                      .tech-stack.mb-3
                        span.badge.bg-light.text-dark.me-2 Unreal Engine
                        span.badge.bg-light.text-dark.me-2 VR
                        span.badge.bg-light.text-dark Simulation
              // Personal Projects
              .col-lg-4.col-md-6
                .project-card
                  .card.border-0.shadow-sm.h-100
                    .card-body.p-4
                      .project-category.mb-2
                        span.badge.bg-success.mb-2 Personal
                      h4.fw-bold.mb-3 VRSurvival
                      p.text-muted.mb-3 Multiplayer VR survival game developed with Unreal Engine 5 and VRExpansionPlugin.
                      .tech-stack.mb-3
                        span.badge.bg-light.text-dark.me-2 Unreal Engine 5
                        span.badge.bg-light.text-dark.me-2 VR
                        span.badge.bg-light.text-dark Multiplayer
                      a.btn.btn-outline-primary.btn-sm(href='https://ficho12.itch.io/o-candil', target='_blank') View Project
              .col-lg-4.col-md-6
                .project-card
                  .card.border-0.shadow-sm.h-100
                    .card-body.p-4
                      .project-category.mb-2
                        span.badge.bg-warning.mb-2 Game Jam
                      h4.fw-bold.mb-3 YABS - Ludum Dare 55
                      p.text-muted.mb-3 Game created in 48 hours for Ludum Dare game jam, showcasing rapid prototyping skills.
                      .tech-stack.mb-3
                        span.badge.bg-light.text-dark.me-2 Unity
                        span.badge.bg-light.text-dark.me-2 C#
                        span.badge.bg-light.text-dark 48h
                      .d-flex.gap-2
                        button.btn.btn-primary.btn-sm(data-bs-toggle='modal', data-bs-target='#yabsModal') Play Game
                        a.btn.btn-outline-primary.btn-sm(href='https://ldjam.com/events/ludum-dare/55/yabs', target='_blank') Ludum Dare
              .col-lg-4.col-md-6
                .project-card
                  .card.border-0.shadow-sm.h-100
                    .card-body.p-4
                      .project-category.mb-2
                        span.badge.bg-warning.mb-2 Game Jam
                      h4.fw-bold.mb-3 Noche - Indie Spain Jam 2023
                      p.text-muted.mb-3 Lead Programmer role in Spanish indie game jam, creating atmospheric horror experience.
                      .tech-stack.mb-3
                        span.badge.bg-light.text-dark.me-2 Unreal Engine 5
                        span.badge.bg-light.text-dark.me-2 Lead Programming
                        span.badge.bg-light.text-dark Horror
                      a.btn.btn-outline-primary.btn-sm(href='https://ficho12.itch.io/la-noche', target='_blank') View Project

    // YABS Game Modal
    #yabsModal.modal.fade(tabindex='-1', aria-hidden='true')
      .modal-dialog.modal-xl
        .modal-content
          .modal-header
            h5.modal-title YABS - Ludum Dare 55
            button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
          .modal-body.p-0
            iframe#yabsFrame(src='', style='width: 100%; height: 600px; border: none;')
          script.
            document.getElementById('yabsModal').addEventListener('show.bs.modal', function() {
              document.getElementById('yabsFrame').src = 'assets/yabs/index.html';
            });
            document.getElementById('yabsModal').addEventListener('hide.bs.modal', function() {
              document.getElementById('yabsFrame').src = '';
            });

    // Skills Section
    section#skills.py-5
      .container
        .row.justify-content-center
          .col-lg-10
            h2.h1.fw-bold.text-center.mb-5 Technical Skills
            .row.g-4
              .col-lg-3.col-md-6
                .skill-category.text-center
                  h4.fw-bold.mb-3 Game Engines
                  ul.list-unstyled
                    li.mb-2 Unity 3D
                    li.mb-2 Unreal Engine 4/5
                    li.mb-2 VRExpansionPlugin
              .col-lg-3.col-md-6
                .skill-category.text-center
                  h4.fw-bold.mb-3 Programming
                  ul.list-unstyled
                    li.mb-2 C# .NET
                    li.mb-2 C++
                    li.mb-2 JavaScript
                    li.mb-2 Python
              .col-lg-3.col-md-6
                .skill-category.text-center
                  h4.fw-bold.mb-3 VR/AR
                  ul.list-unstyled
                    li.mb-2 Oculus SDK
                    li.mb-2 OpenXR
                    li.mb-2 SteamVR
                    li.mb-2 Hand Tracking
              .col-lg-3.col-md-6
                .skill-category.text-center
                  h4.fw-bold.mb-3 Tools & Tech
                  ul.list-unstyled
                    li.mb-2 Git / Version Control
                    li.mb-2 Blender
                    li.mb-2 Photoshop
                    li.mb-2 Agile Development

    // Contact Section
    section#contact.py-5.bg-primary.text-white
      .container
        .row.justify-content-center
          .col-lg-8.text-center
            h2.h1.fw-bold.mb-4 Let's Work Together
            p.lead.mb-4 
              | I'm always interested in new opportunities and exciting projects. 
              | Whether you need VR development, game programming, or technical consultation, let's connect!
            .row.g-4.mt-4
              .col-md-4
                .contact-item
                  i.bi.bi-envelope.fs-2.mb-3
                  h5 Email
                  a.text-white(href='mailto:fizreyarmesto@gmail.com') fizreyarmesto@gmail.com
              .col-md-4
                .contact-item
                  i.bi.bi-linkedin.fs-2.mb-3
                  h5 LinkedIn
                  a.text-white(href='https://www.linkedin.com/in/fizrey/', target='_blank') /in/fizrey
              .col-md-4
                .contact-item
                  i.bi.bi-github.fs-2.mb-3
                  h5 GitHub
                  a.text-white(href='https://github.com/ficho12', target='_blank') /ficho12

    // Footer
    include includes/footer.pug
    include includes/scripts.pug